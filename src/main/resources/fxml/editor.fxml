<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="rootAnchorPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.controller.EditorController">
   <children>
      <ImageView fitHeight="1139.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/e4c-bg.png" />
         </image>
      </ImageView>
      <Pane fx:id="editorElementsPane" stylesheets="@../styles/editor_style.css">
         <children>
            <ToolBar fx:id="toolBar" maxHeight="516.0" maxWidth="56.0" minHeight="516.0" minWidth="56.0" orientation="VERTICAL" prefHeight="516.0" prefWidth="56.0">
              <items>
                  <ToggleButton fx:id="arcBtn" mnemonicParsing="false" onAction="#handleArc" prefHeight="45.0" prefWidth="45.0" text="Arc">
                     <toggleGroup>
                        <ToggleGroup fx:id="shapeGroup" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="circleBtn" mnemonicParsing="false" onAction="#handleCircle" prefHeight="45.0" prefWidth="45.0" text="Circle" toggleGroup="$shapeGroup" />
                  <ToggleButton fx:id="ellipseBtn" mnemonicParsing="false" onAction="#handleEllipses" prefHeight="45.0" prefWidth="45.0" text="Ellipse" toggleGroup="$shapeGroup" />
                  <ToggleButton fx:id="lineBtn" mnemonicParsing="false" onAction="#handleLine" prefHeight="45.0" prefWidth="45.0" text="Line" toggleGroup="$shapeGroup" />
                  <ToggleButton fx:id="polygonBtn" mnemonicParsing="false" onAction="#handlePolygon" prefHeight="45.0" prefWidth="45.0" text="Polygon" toggleGroup="$shapeGroup">
                     <contextMenu>
                        <ContextMenu style="-fx-background-color: #727272;">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleDrawPolygon" styleClass="label-context" text="draw Polygon" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </ToggleButton>
                  <ToggleButton fx:id="rectangleBtn" mnemonicParsing="false" onAction="#handleRectangle" prefHeight="45.0" prefWidth="45.0" text="Rectangle" toggleGroup="$shapeGroup">
                     <contextMenu>
                        <ContextMenu onAction="#handleRoundedRectangle" style="-fx-background-color: #727272;">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Rounded Rectangle" />
                          </items>
                        </ContextMenu>
                     </contextMenu>
                  </ToggleButton>
                  <ToggleButton fx:id="textBtn" mnemonicParsing="false" onAction="#handleText" prefHeight="45.0" prefWidth="45.0" text="Text" toggleGroup="$shapeGroup" />
                  <ToggleButton fx:id="moveBtn" mnemonicParsing="false" onAction="#handleMove" prefHeight="45.0" prefWidth="45.0" text="Move" toggleGroup="$shapeGroup" />
                  <ToggleButton fx:id="pathBtn" mnemonicParsing="false" onAction="#handlePath" prefHeight="45.0" prefWidth="45.0" text="Path" toggleGroup="$shapeGroup" />
                  <Button fx:id="btnDrawUndo" mnemonicParsing="false" onAction="#handleDrawUndo" prefHeight="25.0" prefWidth="45.0" text="Undo" />
                  <Button fx:id="btnDrawRedo" mnemonicParsing="false" onAction="#handleDrawRedo" prefHeight="25.0" prefWidth="45.0" text="Redo" />
              </items>
            </ToolBar>
            <MenuBar fx:id="menuBar" maxHeight="29.0" maxWidth="270.0" minHeight="29.0" minWidth="270.0" prefHeight="29.0" prefWidth="270.0">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="openFile" mnemonicParsing="false" onAction="#handleOpenFile" text="Open File" />
                        <MenuItem fx:id="deleteFile" mnemonicParsing="false" onAction="#handleDeleteFile" text="Delete File" />
                        <MenuItem fx:id="openFileSettings" mnemonicParsing="false" onAction="#handleFileSettings" text="File Settings" />
                        <MenuItem fx:id="saveImage" mnemonicParsing="false" onAction="#handleSaveFile" text="Save Image" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Image">
                     <items>
                        <MenuItem fx:id="moveImage" mnemonicParsing="false" onAction="#handleMoveImage" text="Move Image" />
                        <MenuItem fx:id="scaleImage" mnemonicParsing="false" onAction="#handleScaleImage" text="Scale Image" />
                     </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Filter">
                  <items>
                      <MenuItem fx:id="addNoise" mnemonicParsing="false" onAction="#handleAddNoise" text="Add Noise" />
                      <MenuItem fx:id="addGlitch" mnemonicParsing="false" onAction="#handleAddGlitch" text="Add Glitch" />
                      <MenuItem fx:id="addInverse" mnemonicParsing="false" onAction="#handleAddInverse" text="Inverse" />
                      <MenuItem fx:id="addGrayscale" mnemonicParsing="false" onAction="#handleAddGrayscale" text="Add Grayscale" />
                      <MenuItem fx:id="checkerboardFilterItem" mnemonicParsing="false" onAction="#handleApplyCheckerboard" text="Apply Checkerboard" />
                      <MenuItem mnemonicParsing="false" text="Filter 4" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Gallery">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                    </items>
                  </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <StackPane fx:id="stack" alignment="TOP_LEFT">
               <children>
                  <Button fx:id="importButton" mnemonicParsing="false" onAction="#handleImportButton" text="Import Image" textAlignment="CENTER" StackPane.alignment="CENTER" />
               </children>
            </StackPane>
         </children>
      </Pane>
   </children>
</AnchorPane>
